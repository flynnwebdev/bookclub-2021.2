<h1>Books</h1>

<p><%= link_to "New Book", new_book_path %></p>

<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td><%= link_to book.title, book %></td>
            <td><%= book.author.full_name %></td>
        </tr>
    <% end %>
</table>
